@page
@model RayanStore.Areas.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}

<div clas="card">
    <div class="card-head">
        <div class="card-tools">
            <a asp-page="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add</a>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Users.Count > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge badge-success">
                                    @user.Roles
                                </span>
                            </td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                                <button type="button" class="btn btn-sm btn-danger"><i class="fa fa-trash-o"></i> Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No users found.</p>
        }
    </div>
</div>
