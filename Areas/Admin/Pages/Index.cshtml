@page
@{
    ViewData["Title"] = "Dashboard";
    ViewData["PageTitle"] = "Welcome to My Store Admin Area";
}

<h3>Get Started</h3>
<div class="row">
    <div class="col-md-4">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <i class="fas fa-edit"></i> Products
            </div>
            <div class="card-body">
                <p class="card-text">In this section, you can manage products</p>
            </div>
            <div class="card-footer text-center">
                <a asp-page="Products/Index" class="btn btn-primary">Manage Products <i class="fas fa-arrow-alt-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>
